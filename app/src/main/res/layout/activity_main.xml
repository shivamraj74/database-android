<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="36dp"
        android:background="#009688"
        android:fontFamily="monospace"
        android:text="Customer Details"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_x="11dp"
        android:layout_y="123dp"
        android:background="#042C3E"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Enter Customer ID:"
        android:textColor="#FAF1F1"
        android:textColorLink="#F3EFEF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Rollno"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="213dp"
        android:layout_y="124dp"
        android:inputType="number"
        android:textSize="20sp" />

    <TextView
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_x="15dp"
        android:layout_y="200dp"
        android:background="#04243E"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Enter Name:"
        android:textColor="#F4ECEC"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="214dp"
        android:layout_y="199dp"
        android:inputType="text"
        android:textSize="20sp" />

    <TextView
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_x="13dp"
        android:layout_y="275dp"
        android:background="#042737"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Enter Email:"
        android:textColor="#F4EDED"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Marks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="206dp"
        android:layout_y="275dp"
        android:inputType="text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Insert"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="402dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Insert"
        android:textSize="30dp"
        app:backgroundTint="#27030F" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_x="209dp"
        android:layout_y="402dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Delete"
        android:textSize="30dp"
        app:backgroundTint="#150101" />

    <Button
        android:id="@+id/Update"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_x="35dp"
        android:layout_y="488dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Update"
        android:textSize="30dp"
        app:backgroundTint="#1E0202" />

    <Button
        android:id="@+id/View"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_x="211dp"
        android:layout_y="488dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="View"
        android:textSize="30dp"
        app:backgroundTint="#1B0101" />

    <Button
        android:id="@+id/ViewAll"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="581dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="View All"
        android:textSize="30dp"
        app:backgroundTint="#170101" />

</AbsoluteLayout>